<%= form_for @login, url: admin_login_path do |f| %>
  <div class="card card--login">
    <div class="card__header">
      <h1 class="heading">
        <i class="fa fa-lock"></i>Please Login
      </h1>
    </div>

    <div class="card__content">
      <%= render "admin/shared/validation_errors", object: @login if @login.errors.present? %>

      <div class="form__field">
        <%= f.label :email, class: "form__label" %>
        <%= f.text_field :email, class: "form__input required", type: "email", placeholder: "user@example.com", required: true %>
      </div>

      <div class="form__field">
        <%= f.label :password, class: "form__label" %>
        <%= f.password_field :password, class: "form__input required", required: true %>
      </div>
    </div>

    <div class="card__footer card__footer--align-right">
      <%= f.submit "Login Now", class: "btn btn--no-outline js-primary-action" %>
    </div>
  </div>

  <%= hidden_field_tag :client_id, @login.application.client_id %>
  <%= hidden_field_tag :client_secret, @login.application.client_secret %>
<% end %>
