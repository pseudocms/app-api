//= require turbolinks

<%
  jsx_glob = "#{Rails.root}/app/assets/javascripts/components/**/*.js.jsx"
  components = Dir[jsx_glob].map { |file| File.basename(file, ".js.jsx") }
%>

var Initializer = require("./config/initializer")

var components = {}
<% components.each do |f| %>
  components["<%= f.camelize %>"] = require("./components/<%= f %>");
<% end %>

Initializer.initialize({
  components: components
});
